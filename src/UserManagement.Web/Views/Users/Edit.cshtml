@model UserManagement.Core.DTOs.UpdateUserDto

@{
    ViewData["Title"] = "Edit User";
    var groups = ViewBag.Groups as IEnumerable<UserManagement.Core.DTOs.GroupDto>;
    var userId = ViewBag.UserId;
}

<h1>Edit User</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-route-id="@userId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Groups</label>
                @if (groups != null)
                {
                    @foreach (var group in groups)
                    {
                        var isChecked = Model.GroupIds.Contains(group.Id);
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="GroupIds" value="@group.Id"
                                   id="group_@group.Id" @(isChecked ? "checked" : "")>
                            <label class="form-check-label" for="group_@group.Id">
                                @group.Name - @group.Description
                            </label>
                        </div>
                    }
                }
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}